<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="steinberg.paediatric_drug_dosing.MainActivity">

    <Spinner
        android:id="@+id/DrugSelectionSpinner"
        android:layout_width="368dp"
        android:layout_height="55dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/ChooseDrugLabel"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/ChooseDrugLabel"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="40dp"
        android:text="Choose Drug:"
        app:layout_constraintTop_toBottomOf="@+id/WeightInput"
        tools:layout_editor_absoluteX="151dp" />

    <TextView
        android:id="@+id/ChooseWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Weight (kg)"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="157dp" />

    <EditText
        android:id="@+id/WeightInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true"
        android:text="25"
        app:layout_constraintTop_toBottomOf="@+id/ChooseWeightLabel"
        tools:layout_editor_absoluteX="84dp" />

    <Button
        android:id="@+id/CalculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Calculate"
        app:layout_constraintTop_toBottomOf="@+id/DrugSelectionSpinner"
        tools:layout_editor_absoluteX="132dp" />

    <TextView
        android:id="@+id/MillilitersOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="313dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="163dp" />

    <TextView
        android:id="@+id/MilligramsOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="412dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="173dp" />

</android.support.constraint.ConstraintLayout>
